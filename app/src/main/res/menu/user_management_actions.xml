<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- View User Details -->
    <item
        android:id="@+id/action_view_user_details"
        android:icon="@android:drawable/ic_menu_info_details"
        android:title="View Details"
        app:showAsAction="ifRoom" />

    <!-- Change User Role -->
    <item
        android:id="@+id/action_change_role"
        android:icon="@android:drawable/ic_menu_manage"
        android:title="Change Role"
        app:showAsAction="ifRoom">
        <menu>
            <item
                android:id="@+id/role_user"
                android:title="Regular User" />
            <item
                android:id="@+id/role_admin"
                android:title="Admin" />
        </menu>
    </item>

    <!-- User Status Actions -->
    <item
        android:id="@+id/action_block_user"
        android:icon="@android:drawable/ic_lock_lock"
        android:title="@string/block_user"
        android:visible="true"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_unblock_user"
        android:icon="@android:drawable/ic_lock_idle_lock"
        android:title="@string/unblock_user"
        android:visible="false"
        app:showAsAction="never" />

    <!-- Audit Actions -->
    <item
        android:id="@+id/action_view_user_activity"
        android:icon="@android:drawable/ic_menu_recent_history"
        android:title="View Activity"
        app:showAsAction="never" />

    <item
        android:id="@+id/action_view_user_audit_logs"
        android:icon="@android:drawable/ic_menu_agenda"
        android:title="View Audit Logs"
        app:showAsAction="never" />

    <!-- Delete User -->
    <item
        android:id="@+id/action_delete_user"
        android:icon="@android:drawable/ic_menu_delete"
        android:title="Delete User"
        android:visible="false"
        app:showAsAction="never" />

    <!-- Reset Password -->
    <item
        android:id="@+id/action_reset_password"
        android:icon="@android:drawable/ic_menu_rotate"
        android:title="Reset Password"
        app:showAsAction="never" />

</menu>